<div id="<%= dom_id product %>">
  <p>
    <strong>Brand:</strong>
    <%= product.brand %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Qty:</strong>
    <%= product.qty %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @product.category.name %>
  </p>

  <div style="width: 400px; height; auto">
    <%= link_to image_tag(@product.image, style:'width:100%'), products_path %>
  </div>

</div>
